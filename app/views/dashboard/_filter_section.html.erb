<%# locals: (current_category:) %>
<div class="flex bg-gray-100 dark:bg-gray-800 rounded-lg p-1">
  <%= link_to "すべて", dashboard_category_path(current_category),
              local: false,
              class: "flex-1 text-center py-2 px-3 rounded-md text-sm font-medium transition #{params[:filter].blank? ? 'bg-white dark:bg-gray-700 text-blue-600 shadow-sm' : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200'}" %>
  <%= link_to "未訪問", dashboard_category_path(current_category, filter: "unvisited"),
              local: false,
              class: "flex-1 text-center py-2 px-3 rounded-md text-sm font-medium transition #{params[:filter] == 'unvisited' ? 'bg-white dark:bg-gray-700 text-blue-600 shadow-sm' : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200'}" %>
  <%= link_to "訪問済み", dashboard_category_path(current_category, filter: "visited"),
              local: false,
              class: "flex-1 text-center py-2 px-3 rounded-md text-sm font-medium transition #{params[:filter] == 'visited' ? 'bg-white dark:bg-gray-700 text-blue-600 shadow-sm' : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200'}" %>
</div>