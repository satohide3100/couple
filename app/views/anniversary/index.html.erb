<% content_for :title, "記念日カウンター" %>

<!-- Toast container -->
<div id="toast"></div>

<!-- Debug log container (hidden) -->
<div id="debug-log" class="fixed top-4 left-4 z-50 bg-black/80 text-white text-xs p-3 rounded-lg max-w-md max-h-96 overflow-y-auto font-mono hidden">
  <div class="font-bold mb-2">Debug Log:</div>
  <div id="debug-content"></div>
</div>

<div class="min-h-screen relative overflow-hidden">
  <!-- 背景エフェクト -->
  <div class="absolute inset-0">
    <!-- メインの背景グラデーション -->
    <div class="absolute inset-0 bg-gradient-animated"></div>
    
    <!-- SVG背景パターン -->
    <div class="absolute inset-0 opacity-20 parallax-slow">
      <svg class="w-full h-full" viewBox="0 0 1000 1000" xmlns="http://www.w3.org/2000/svg">
        <!-- 浮遊するハート -->
        <g class="animate-float-slow">
          <path d="M200 300 C200 280, 220 260, 240 260 C260 260, 280 280, 280 300 C280 320, 240 360, 240 360 C240 360, 200 320, 200 300 Z" fill="#ff69b4" opacity="0.3">
            <animateTransform attributeName="transform" type="translate" values="0,0; 20,10; 0,0" dur="6s" repeatCount="indefinite"/>
          </path>
        </g>
        
        <g class="animate-float-slow" style="animation-delay: 2s;">
          <path d="M700 200 C700 180, 720 160, 740 160 C760 160, 780 180, 780 200 C780 220, 740 260, 740 260 C740 260, 700 220, 700 200 Z" fill="#ff1493" opacity="0.2">
            <animateTransform attributeName="transform" type="translate" values="0,0; -15,15; 0,0" dur="8s" repeatCount="indefinite"/>
          </path>
        </g>
        
        <!-- 星座のような接続線 -->
        <g class="animate-pulse" style="animation-delay: 1s;">
          <circle cx="150" cy="150" r="3" fill="#87ceeb" opacity="0.4">
            <animate attributeName="opacity" values="0.4; 0.8; 0.4" dur="4s" repeatCount="indefinite"/>
          </circle>
          <circle cx="250" cy="180" r="2" fill="#87ceeb" opacity="0.3">
            <animate attributeName="opacity" values="0.3; 0.7; 0.3" dur="5s" repeatCount="indefinite"/>
          </circle>
          <circle cx="320" cy="120" r="2.5" fill="#87ceeb" opacity="0.5">
            <animate attributeName="opacity" values="0.5; 0.9; 0.5" dur="3s" repeatCount="indefinite"/>
          </circle>
          <line x1="150" y1="150" x2="250" y2="180" stroke="#87ceeb" stroke-width="1" opacity="0.2">
            <animate attributeName="opacity" values="0.2; 0.4; 0.2" dur="4s" repeatCount="indefinite"/>
          </line>
          <line x1="250" y1="180" x2="320" y2="120" stroke="#87ceeb" stroke-width="1" opacity="0.2">
            <animate attributeName="opacity" values="0.2; 0.4; 0.2" dur="5s" repeatCount="indefinite"/>
          </line>
        </g>
        
        <!-- 幾何学的な形状 -->
        <g class="animate-spin-slow" style="animation-delay: 3s;">
          <polygon points="600,400 620,440 660,440 630,470 640,510 600,490 560,510 570,470 540,440 580,440" fill="#9370db" opacity="0.15">
            <animateTransform attributeName="transform" type="rotate" values="0 600 450; 360 600 450" dur="20s" repeatCount="indefinite"/>
          </polygon>
        </g>
        
        <g class="animate-spin-slow" style="animation-delay: 5s;">
          <polygon points="800,600 815,620 835,605 825,585 805,580" fill="#ff6347" opacity="0.2">
            <animateTransform attributeName="transform" type="rotate" values="0 820 600; -360 820 600" dur="15s" repeatCount="indefinite"/>
          </polygon>
        </g>
        
        <!-- 波紋効果 -->
        <g class="animate-ping" style="animation-delay: 4s;">
          <circle cx="400" cy="700" r="30" fill="none" stroke="#40e0d0" stroke-width="1" opacity="0.3">
            <animate attributeName="r" values="30; 80; 30" dur="6s" repeatCount="indefinite"/>
            <animate attributeName="opacity" values="0.3; 0; 0.3" dur="6s" repeatCount="indefinite"/>
          </circle>
        </g>
        
        <!-- 流れ星エフェクト -->
        <g class="animate-shooting-star">
          <line x1="0" y1="100" x2="50" y2="150" stroke="#ffd700" stroke-width="2" opacity="0.8">
            <animateTransform attributeName="transform" type="translate" values="0,0; 1000,1000" dur="8s" repeatCount="indefinite"/>
            <animate attributeName="opacity" values="0; 0.8; 0" dur="8s" repeatCount="indefinite"/>
          </line>
        </g>
        
        <g class="animate-shooting-star" style="animation-delay: 10s;">
          <line x1="0" y1="300" x2="40" y2="340" stroke="#ffd700" stroke-width="1.5" opacity="0.6">
            <animateTransform attributeName="transform" type="translate" values="0,0; 1000,1000" dur="10s" repeatCount="indefinite"/>
            <animate attributeName="opacity" values="0; 0.6; 0" dur="10s" repeatCount="indefinite"/>
          </line>
        </g>
      </svg>
    </div>
    
    <!-- 光の放射パターン -->
    <div class="absolute inset-0 opacity-30 parallax-fast">
      <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-blue-400/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute top-3/4 right-1/4 w-48 h-48 bg-purple-400/20 rounded-full blur-2xl animate-pulse" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-1/4 left-1/2 w-32 h-32 bg-pink-400/20 rounded-full blur-xl animate-pulse" style="animation-delay: 2s;"></div>
    </div>
    
    <!-- 中央の強い光 -->
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
      <div class="w-96 h-96 bg-gradient-radial from-blue-300/10 via-blue-500/5 to-transparent rounded-full blur-2xl animate-pulse"></div>
    </div>
    
    <!-- 格子状の光パターン -->
    <div class="absolute inset-0 opacity-10">
      <div class="w-full h-full" style="background-image: radial-gradient(circle at 25% 25%, #3b82f6 1px, transparent 1px), radial-gradient(circle at 75% 75%, #8b5cf6 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>
    
    <!-- 追加のオーバーレイ -->
    <div class="absolute inset-0 bg-black/40"></div>
  </div>
  
  <!-- 光の粒子エフェクト -->
  <div class="absolute inset-0 overflow-hidden">
    <!-- 大きな光の粒子 -->
    <div class="absolute w-2 h-2 bg-blue-300 rounded-full animate-particle-drift opacity-70" style="top: 20%; left: 10%; animation-delay: 0s;"></div>
    <div class="absolute w-1 h-1 bg-purple-300 rounded-full animate-particle-drift opacity-60" style="top: 30%; left: 80%; animation-delay: 1s;"></div>
    <div class="absolute w-1.5 h-1.5 bg-pink-300 rounded-full animate-particle-drift opacity-80" style="top: 60%; left: 20%; animation-delay: 2s;"></div>
    <div class="absolute w-1 h-1 bg-cyan-300 rounded-full animate-particle-drift opacity-50" style="top: 80%; left: 90%; animation-delay: 3s;"></div>
    <div class="absolute w-1 h-1 bg-indigo-300 rounded-full animate-particle-drift opacity-70" style="top: 15%; left: 60%; animation-delay: 4s;"></div>
    <div class="absolute w-1 h-1 bg-violet-300 rounded-full animate-particle-drift opacity-60" style="top: 70%; left: 70%; animation-delay: 5s;"></div>
    
    <!-- 追加の小さな光の粒子 -->
    <div class="absolute w-0.5 h-0.5 bg-blue-200 rounded-full animate-particle-drift opacity-40" style="top: 35%; left: 15%; animation-delay: 0.5s;"></div>
    <div class="absolute w-0.5 h-0.5 bg-purple-200 rounded-full animate-particle-drift opacity-30" style="top: 45%; left: 85%; animation-delay: 1.5s;"></div>
    <div class="absolute w-0.5 h-0.5 bg-pink-200 rounded-full animate-particle-drift opacity-50" style="top: 75%; left: 25%; animation-delay: 2.5s;"></div>
    <div class="absolute w-0.5 h-0.5 bg-cyan-200 rounded-full animate-particle-drift opacity-35" style="top: 85%; left: 75%; animation-delay: 3.5s;"></div>
    <div class="absolute w-0.5 h-0.5 bg-indigo-200 rounded-full animate-particle-drift opacity-45" style="top: 25%; left: 45%; animation-delay: 4.5s;"></div>
    <div class="absolute w-0.5 h-0.5 bg-violet-200 rounded-full animate-particle-drift opacity-40" style="top: 65%; left: 55%; animation-delay: 5.5s;"></div>
    
    <!-- 光の線エフェクト -->
    <div class="absolute w-px h-8 bg-gradient-to-b from-blue-300/60 to-transparent animate-pulse opacity-30" style="top: 10%; left: 30%; animation-delay: 1s;"></div>
    <div class="absolute w-px h-12 bg-gradient-to-b from-purple-300/60 to-transparent animate-pulse opacity-25" style="top: 50%; left: 70%; animation-delay: 2s;"></div>
    <div class="absolute w-px h-6 bg-gradient-to-b from-pink-300/60 to-transparent animate-pulse opacity-35" style="top: 40%; left: 90%; animation-delay: 3s;"></div>
  </div>
  
  <div class="relative z-10">

  <!-- メインコンテンツ -->
  <main class="px-4 py-6">
    <div class="max-w-md mx-auto space-y-6">
      
      <!-- カップル情報 -->
      <div class="bg-white/15 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-6 relative overflow-hidden group flex items-center justify-center" id="couple-info-container" style="min-height: 200px;">
        <!-- 背景画像 -->
        <% if @background_photo&.image? %>
          <div class="absolute inset-0 opacity-40 group-hover:opacity-50 transition-opacity duration-300 couple-bg-image" style="background-image: url('<%= @background_photo.image.url %>'); background-size: contain; background-position: center; background-repeat: no-repeat;"></div>
          <div class="absolute inset-0 bg-gradient-to-br from-blue-900/50 via-purple-900/50 to-pink-900/50"></div>
        <% else %>
          <div class="absolute inset-0 bg-gradient-to-br from-blue-400/10 via-purple-400/10 to-pink-400/10"></div>
        <% end %>
        
        <!-- 編集ボタン -->
        <button data-controller="modal"
                data-action="click->modal#open"
                data-modal-target-value="background-upload-modal"
                class="absolute top-4 right-4 bg-white/20 hover:bg-white/30 backdrop-blur-md rounded-full p-2 transition-all duration-300 z-20">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </button>
        
        <div class="relative z-10 w-full">
          <div class="flex items-center justify-center gap-6 mb-6">
            <!-- ひでのプロフィール -->
            <div class="text-center">
              <button data-controller="modal"
                      data-action="click->modal#open"
                      data-modal-target-value="profile-modal-male"
                      class="relative group cursor-pointer">
                <div class="w-20 h-20 bg-gradient-to-br from-cyan-400 via-blue-500 to-blue-600 rounded-full flex items-center justify-center shadow-2xl ring-4 ring-blue-400/30 transition-all duration-300 group-hover:ring-blue-400/50 overflow-hidden">
                  <% if @male_profile&.avatar? %>
                    <img src="<%= @male_profile.avatar.url %>" class="w-full h-full object-cover" alt="ひでのプロフィール">
                  <% else %>
                    <span class="text-white font-bold text-2xl drop-shadow-lg">ひ</span>
                  <% end %>
                </div>
                <div class="absolute -bottom-2 -right-2 w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center shadow-xl ring-2 ring-white/30">
                  <span class="text-white text-sm font-bold">♂</span>
                </div>
                <div class="absolute inset-0 bg-blue-400/20 rounded-full blur-xl group-hover:blur-2xl transition-all duration-300"></div>
              </button>
              <p class="text-sm font-bold text-white mt-3 drop-shadow-md">
                <%= @male_profile&.name || "ひで" %>
              </p>
            </div>

            <!-- ハート -->
            <div class="flex items-center justify-center">
              <div class="relative">
                <svg class="w-12 h-12 text-pink-400 heart-beat drop-shadow-lg" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                </svg>
                <div class="absolute inset-0 bg-pink-400 rounded-full blur-2xl opacity-40 animate-pulse"></div>
                <div class="absolute inset-0 bg-pink-300 rounded-full blur-3xl opacity-20 animate-ping"></div>
              </div>
            </div>

            <!-- りなのプロフィール -->
            <div class="text-center">
              <button data-controller="modal"
                      data-action="click->modal#open"
                      data-modal-target-value="profile-modal-female"
                      class="relative group cursor-pointer">
                <div class="w-20 h-20 bg-gradient-to-br from-pink-400 via-rose-500 to-pink-600 rounded-full flex items-center justify-center shadow-2xl ring-4 ring-pink-400/30 transition-all duration-300 group-hover:ring-pink-400/50 overflow-hidden">
                  <% if @female_profile&.avatar? %>
                    <img src="<%= @female_profile.avatar.url %>" class="w-full h-full object-cover" alt="りなのプロフィール">
                  <% else %>
                    <span class="text-white font-bold text-2xl drop-shadow-lg">り</span>
                  <% end %>
                </div>
                <div class="absolute -bottom-2 -right-2 w-8 h-8 bg-gradient-to-br from-pink-500 to-pink-600 rounded-full flex items-center justify-center shadow-xl ring-2 ring-white/30">
                  <span class="text-white text-sm font-bold">♀</span>
                </div>
                <div class="absolute inset-0 bg-pink-400/20 rounded-full blur-xl group-hover:blur-2xl transition-all duration-300"></div>
              </button>
              <p class="text-sm font-bold text-white mt-3 drop-shadow-md">
                <%= @female_profile&.name || "りな" %>
              </p>
            </div>
          </div>

          <!-- 付き合い始めた日 -->
          <div class="text-center">
            <p class="text-sm text-white/80 mb-2 drop-shadow-sm">付き合い始めた日</p>
            <p class="text-xl font-bold text-white drop-shadow-lg">
              <%= @anniversary_date.strftime("%Y年%m月%d日") %>
            </p>
          </div>
        </div>
      </div>

      <!-- メインカウンター -->
      <div class="bg-white/20 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/30 p-8 relative overflow-hidden flex items-center justify-center" style="min-height: 200px;">
        <div class="absolute inset-0 bg-gradient-to-br from-cyan-400/10 via-blue-400/10 to-purple-400/10"></div>
        <div class="absolute top-4 right-4 w-16 h-16 bg-gradient-to-br from-blue-400/20 to-purple-400/20 rounded-full blur-xl"></div>
        <div class="absolute bottom-4 left-4 w-12 h-12 bg-gradient-to-br from-pink-400/20 to-purple-400/20 rounded-full blur-lg"></div>
        <div class="relative z-10 text-center">
          <div class="mb-6 relative">
            <span class="text-7xl font-black text-white drop-shadow-2xl tracking-wider relative z-10">
              <%= @days_together %>
            </span>
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-7xl font-black text-blue-300/20 blur-sm">
                <%= @days_together %>
              </span>
            </div>
          </div>
          <p class="text-xl font-bold text-white mb-3 drop-shadow-lg">日間一緒</p>
          <p class="text-sm text-white/80 drop-shadow-sm">
            <%= @today.strftime("%Y年%m月%d日") %>現在
          </p>
        </div>
      </div>

      <!-- 次の記念日までのカウントダウン -->
      <div class="space-y-4">
        <!-- 月数記念日 -->
        <div class="bg-white/15 backdrop-blur-xl rounded-2xl shadow-xl border border-white/20 p-5 relative overflow-hidden group hover:bg-white/20 transition-all duration-300 scroll-animate-left stagger-1">
          <div class="absolute inset-0 bg-gradient-to-r from-purple-400/5 to-violet-400/5"></div>
          <div class="absolute top-2 right-2 w-8 h-8 bg-purple-400/20 rounded-full blur-lg"></div>
          <div class="relative z-10 flex items-center justify-between">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-gradient-to-br from-purple-400 via-violet-500 to-purple-600 rounded-full flex items-center justify-center shadow-xl ring-2 ring-purple-400/30">
                <span class="text-white font-bold text-sm drop-shadow-lg"><%= @next_month_milestone %></span>
              </div>
              <div>
                <p class="font-bold text-white text-lg drop-shadow-md">
                  <%= @next_month_milestone %>ヶ月記念日
                </p>
                <p class="text-sm text-white/80 drop-shadow-sm">
                  <%= @next_month_date.strftime("%m月%d日") %>
                </p>
              </div>
            </div>
            <div class="text-right">
              <p class="text-2xl font-black text-white drop-shadow-lg">
                <span class="text-purple-300">あと</span><%= @days_to_next_month %><span class="text-purple-300">日</span>
              </p>
            </div>
          </div>
        </div>

        <!-- 年数記念日 -->
        <div class="bg-white/15 backdrop-blur-xl rounded-2xl shadow-xl border border-white/20 p-5 relative overflow-hidden group hover:bg-white/20 transition-all duration-300 scroll-animate-right stagger-2">
          <div class="absolute inset-0 bg-gradient-to-r from-indigo-400/5 to-blue-400/5"></div>
          <div class="absolute top-2 right-2 w-8 h-8 bg-indigo-400/20 rounded-full blur-lg"></div>
          <div class="relative z-10 flex items-center justify-between">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-gradient-to-br from-indigo-400 via-blue-500 to-indigo-600 rounded-full flex items-center justify-center shadow-xl ring-2 ring-indigo-400/30">
                <span class="text-white font-bold text-sm drop-shadow-lg"><%= @next_year_milestone %></span>
              </div>
              <div>
                <p class="font-bold text-white text-lg drop-shadow-md">
                  <%= @next_year_milestone %>周年記念日
                </p>
                <p class="text-sm text-white/80 drop-shadow-sm">
                  <%= @next_year_date.strftime("%Y年%m月%d日") %>
                </p>
              </div>
            </div>
            <div class="text-right">
              <p class="text-2xl font-black text-white drop-shadow-lg">
                <span class="text-indigo-300">あと</span><%= @days_to_next_year %><span class="text-indigo-300">日</span>
              </p>
            </div>
          </div>
        </div>

        <!-- 特別な日数記念日 -->
        <% if @next_special_day %>
          <div class="bg-white/15 backdrop-blur-xl rounded-2xl shadow-xl border border-white/20 p-5 relative overflow-hidden group hover:bg-white/20 transition-all duration-300">
            <div class="absolute inset-0 bg-gradient-to-r from-pink-400/5 to-rose-400/5"></div>
            <div class="absolute top-2 right-2 w-8 h-8 bg-pink-400/20 rounded-full blur-lg"></div>
            <div class="relative z-10 flex items-center justify-between">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-gradient-to-br from-pink-400 via-rose-500 to-pink-600 rounded-full flex items-center justify-center shadow-xl ring-2 ring-pink-400/30">
                  <span class="text-white font-bold text-xs drop-shadow-lg"><%= @next_special_day[:type].gsub('日', '') %></span>
                </div>
                <div>
                  <p class="font-bold text-white text-lg drop-shadow-md">
                    <%= @next_special_day[:type] %>記念日
                  </p>
                  <p class="text-sm text-white/80 drop-shadow-sm">
                    <%= @next_special_day[:date].strftime("%Y年%m月%d日") %>
                  </p>
                </div>
              </div>
              <div class="text-right">
                <p class="text-2xl font-black text-white drop-shadow-lg">
                  <span class="text-pink-300">あと</span><%= @next_special_day[:days_until] %><span class="text-pink-300">日</span>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- 誕生日カウントダウン -->
      <% if @male_profile&.birthday || @female_profile&.birthday %>
        <div class="space-y-4">
          <h3 class="text-lg font-bold text-white text-center mb-4 drop-shadow-lg">
            🎂 誕生日まで
          </h3>
          
          <% if @male_profile&.birthday %>
            <div class="bg-white/15 backdrop-blur-xl rounded-2xl shadow-xl border border-white/20 p-5 relative overflow-hidden group hover:bg-white/20 transition-all duration-300">
              <div class="absolute inset-0 bg-gradient-to-r from-cyan-400/5 to-blue-400/5"></div>
              <div class="absolute top-2 right-2 w-8 h-8 bg-cyan-400/20 rounded-full blur-lg"></div>
              <div class="relative z-10 flex items-center justify-between">
                <div class="flex items-center gap-4">
                  <div class="w-12 h-12 bg-gradient-to-br from-cyan-400 via-blue-500 to-blue-600 rounded-full flex items-center justify-center shadow-xl ring-2 ring-cyan-400/30">
                    <span class="text-white font-bold text-lg drop-shadow-lg">🎂</span>
                  </div>
                  <div>
                    <p class="font-bold text-white text-lg drop-shadow-md">
                      <%= @male_profile.name || "ひで" %>の誕生日
                    </p>
                    <p class="text-sm text-white/80 drop-shadow-sm">
                      <%= @male_profile.next_birthday.strftime("%m月%d日") %>
                      <% if @male_profile.age %>
                        （<%= @male_profile.age + 1 %>歳）
                      <% end %>
                    </p>
                  </div>
                </div>
                <div class="text-right">
                  <% if @male_profile.days_until_birthday == 0 %>
                    <p class="text-2xl font-black text-white drop-shadow-lg">
                      <span class="text-cyan-300">今日！</span>
                    </p>
                  <% else %>
                    <p class="text-2xl font-black text-white drop-shadow-lg">
                      <span class="text-cyan-300">あと</span><%= @male_profile.days_until_birthday %><span class="text-cyan-300">日</span>
                    </p>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>

          <% if @female_profile&.birthday %>
            <div class="bg-white/15 backdrop-blur-xl rounded-2xl shadow-xl border border-white/20 p-5 relative overflow-hidden group hover:bg-white/20 transition-all duration-300">
              <div class="absolute inset-0 bg-gradient-to-r from-pink-400/5 to-rose-400/5"></div>
              <div class="absolute top-2 right-2 w-8 h-8 bg-pink-400/20 rounded-full blur-lg"></div>
              <div class="relative z-10 flex items-center justify-between">
                <div class="flex items-center gap-4">
                  <div class="w-12 h-12 bg-gradient-to-br from-pink-400 via-rose-500 to-pink-600 rounded-full flex items-center justify-center shadow-xl ring-2 ring-pink-400/30">
                    <span class="text-white font-bold text-lg drop-shadow-lg">🎂</span>
                  </div>
                  <div>
                    <p class="font-bold text-white text-lg drop-shadow-md">
                      <%= @female_profile.name || "りな" %>の誕生日
                    </p>
