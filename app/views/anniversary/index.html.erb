<script>
  function previewImage(input) {
    const file = input.files[0];
    const preview = document.getElementById('image-preview');
    
    if (file) {
      const reader = new FileReader();
      reader.onload = function(e) {
        preview.innerHTML = `
          <img src="${e.target.result}" class="w-full h-full object-cover rounded-2xl" />
        `;
      };
      reader.readAsDataURL(file);
    }
  }

  // カップル情報のdivを背景画像の縦幅に合わせる
  document.addEventListener('DOMContentLoaded', function() {
    const coupleContainer = document.getElementById('couple-info-container');
    const bgImage = document.querySelector('.couple-bg-image');
    
    console.log('Container:', coupleContainer);
    console.log('Background image element:', bgImage);
    
    if (bgImage) {
      // 背景画像のURLを取得
      const bgImageStyle = bgImage.style.backgroundImage;
      console.log('Background image style:', bgImageStyle);
      
      if (bgImageStyle && bgImageStyle !== 'none') {
        const bgImageUrl = bgImageStyle.slice(5, -2);
        console.log('Background image URL:', bgImageUrl);
        
        // 新しい画像要素を作成して元の画像のサイズを取得
        const img = new Image();
        img.onload = function() {
          console.log('Image loaded - width:', this.naturalWidth, 'height:', this.naturalHeight);
          
          // コンテナの幅を取得
          const containerWidth = coupleContainer.offsetWidth;
          console.log('Container width:', containerWidth);
          
          // アスペクト比を維持して高さを計算
          const aspectRatio = this.naturalHeight / this.naturalWidth;
          const calculatedHeight = containerWidth * aspectRatio;
          console.log('Calculated height:', calculatedHeight);
          
          // 最小高さを200px、最大高さを600pxに制限
          const finalHeight = Math.min(Math.max(calculatedHeight, 200), 600);
          console.log('Final height:', finalHeight);
          
          // 高さを設定
          coupleContainer.style.height = finalHeight + 'px';
        };
        img.onerror = function() {
          console.error('Failed to load image:', bgImageUrl);
        };
        img.src = bgImageUrl;
      } else {
        console.log('No background image found');
      }
    } else {
      console.log('Background image element not found');
    }
  });
  
  // ウィンドウリサイズ時にも再計算
  window.addEventListener('resize', function() {
    const coupleContainer = document.getElementById('couple-info-container');
    const bgImage = document.querySelector('.couple-bg-image');
    
    if (bgImage) {
      const bgImageUrl = bgImage.style.backgroundImage.slice(5, -2);
      const img = new Image();
      img.onload = function() {
        const containerWidth = coupleContainer.offsetWidth;
        const aspectRatio = this.naturalHeight / this.naturalWidth;
        const calculatedHeight = containerWidth * aspectRatio;
        const finalHeight = Math.min(Math.max(calculatedHeight, 200), 600);
        coupleContainer.style.height = finalHeight + 'px';
      };
      img.src = bgImageUrl;
    }
  });
  
  // デバッグログ関数
  function debugLog(message) {
    const debugContent = document.getElementById('debug-content');
    const timestamp = new Date().toLocaleTimeString();
    const logEntry = document.createElement('div');
    logEntry.innerHTML = `<span class="text-gray-400">[${timestamp}]</span> ${message}`;
    debugContent.appendChild(logEntry);
    debugContent.scrollTop = debugContent.scrollHeight;
    console.log(message);
  }
  
  
  // パララックス効果の実装
  function initParallaxEffects() {
    debugLog('🏔️ Starting parallax effects initialization...');
    
    const parallaxElements = document.querySelectorAll('.parallax-slow, .parallax-fast');
    debugLog(`📋 Found ${parallaxElements.length} parallax elements`);
    
    if (parallaxElements.length === 0) {
      debugLog('❌ No parallax elements found');
      return;
    }
    
    let ticking = false;
    let scrollCount = 0;
    
    function updateParallax() {
      const scrolled = window.pageYOffset;
      scrollCount++;
      
      if (scrollCount % 30 === 0) { // 30回に1回ログを出力
        debugLog(`🌊 Parallax update: scroll=${scrolled}px`);
      }
      
      parallaxElements.forEach(element => {
        const speed = element.classList.contains('parallax-slow') ? 0.5 : 1;
        const yPos = -(scrolled * speed);
        element.style.transform = `translateY(${yPos}px)`;
      });
      
      ticking = false;
    }
    
    function requestTick() {
      if (!ticking) {
        requestAnimationFrame(updateParallax);
        ticking = true;
      }
    }
    
    window.addEventListener('scroll', requestTick);
    debugLog('✅ Parallax effects initialized successfully');
  }
  
  // スクロールアニメーションの実装
  function initScrollAnimations() {
    debugLog('🎬 Starting scroll animations initialization...');
    
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const className = entry.target.className;
          debugLog(`✨ Element entering view: ${className.split(' ').slice(0, 3).join(' ')}...`);
          entry.target.classList.add('animate-in');
        }
      });
    }, observerOptions);
    
    // スクロールアニメーション対象の要素を監視
    const scrollElements = document.querySelectorAll('.scroll-animate, .scroll-animate-left, .scroll-animate-right, .scroll-animate-scale');
    debugLog(`📋 Found ${scrollElements.length} scroll animation elements`);
    
    scrollElements.forEach((el, index) => {
      const classes = el.classList.toString();
      debugLog(`👀 Observing element ${index + 1}: ${classes.split(' ').slice(0, 3).join(' ')}...`);
      observer.observe(el);
    });
    
    debugLog('✅ Scroll animations initialized successfully');
  }
  
  // 初期化
  debugLog('🚀 Page loaded, initializing animations...');
  initScrollAnimations();
  initParallaxEffects();
  debugLog('🎉 All animations initialized!');
</script>


